@model ExpedientVM

@{
    ViewData["Title"] = "Expediente";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.Message is not null)
{
    <partial name="/Views/Shared/_ModalMessage.cshtml" model="(String)ViewBag.Message" />
}

<div style="display:flex; justify-content:center;">
    <h1>Expediente</h1>
</div>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="DUI" class="control-label"></label>
                <input asp-for="DUI" class="form-control" />
                <span asp-validation-for="DUI" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Names" class="control-label"></label>
                <input asp-for="Names" class="form-control" />
                <span asp-validation-for="Names" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Lastnames" class="control-label"></label>
                <input asp-for="Lastnames" class="form-control" />
                <span asp-validation-for="Lastnames" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MovilePhoneNumber" class="control-label"></label>
                <input asp-for="MovilePhoneNumber" class="form-control" />
                <span asp-validation-for="MovilePhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="LandlineNumber" class="control-label"></label>
                <input asp-for="LandlineNumber" class="form-control" />
                <span asp-validation-for="LandlineNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="my-2 form-group mt-2">
                <label asp-for="Gender" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Hombre">Hombre<br>
                    <input asp-for="Gender" class="form-check-input" type="radio" value="Mujer">Mujer
                </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group mt-2">
                <label asp-for="CivilStatus" class="control-label"></label>
                <select asp-for="CivilStatus" class="form-select" id="single-select-field">
                    <option>Seleccionar Estado</option>
                    <option value="Soltero/a">Soltero/a</option>
                    <option value="Casado/a">Casado/a</option>
                    <option value="Divorciado/a">Divorciado/a</option>
                    <option value="Viudo/a">Viudo/a</option>
                </select>
                <span asp-validation-for="CivilStatus" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="AcademicTraining" class="control-label"></label>
                <select asp-for="AcademicTraining" class="form-select" id="single-select-field">
                    <option>Seleccionar Formación</option>
                    @foreach (var formation in (List<string>)ViewBag.AcademicFormations)
                    {
                        <option value="@formation">@formation</option>
                    }
                </select>
                <span asp-validation-for="AcademicTraining" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Certificate" class="control-label"></label>
                <input asp-for="Certificate" class="form-control" />
                <span asp-validation-for="Certificate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CurriculumVitae" class="control-label"></label>
                <input asp-for="CurriculumVitae" class="form-control" type="file" accept="application/pdf" />
                <span asp-validation-for="CurriculumVitae" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Municipality" class="control-label"></label>
                <input asp-for="Municipality" class="form-control" />
                <span asp-validation-for="Municipality" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Direction" class="control-label"></label>
                <input asp-for="Direction" class="form-control" />
                <span asp-validation-for="Direction" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group mt-4 text-center">
            <input type="submit" value="Enviar" class="btn btn-primary col-3" />
        </div>
    </div>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_SelectsJQueryPartial");
    }
}
