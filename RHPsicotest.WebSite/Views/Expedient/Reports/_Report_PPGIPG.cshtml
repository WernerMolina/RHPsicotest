@model IEnumerable<Result>

@{
    Layout = null;

    List<int> percentiles = new List<int>();

    foreach (Result result in Model)
    {
        percentiles.Add(result.Percentile);
    }

    int i = 0;
    string[] factors = { "Ascendencia", "Responsabilidad", "Estabilidad Emocional", "Sociabilidad", "Cautela", "Originalidad", "Comprensión", "Vitalidad", "Autoestima" };

    string factorsJson = JsonConvert.SerializeObject(factors);
    string percentileJson = JsonConvert.SerializeObject(percentiles);
}

<h2 class="text-center fw-bold">PPG-IPG</h2>

<div class="">
    <div id="main" style="width: 100%; height: 500px;"></div>
</div>

<div class="">
    @foreach (Result result in Model)
    {
        <p class="mt-4 fs-5 fw-bold text-danger">@factors[i]</p>
        <p class="my-3 fs-5 fw-bold">@result.Description</p>

        i++;
    }
</div>

<script type="text/javascript">
    let percentilesData = @Html.Raw(percentileJson);
    let factorsData = @Html.Raw(factorsJson);

    // Initialize the echarts instance based on the prepared dom
    var myChart = echarts.init(document.getElementById('main'));

    // Specify the configuration items and data for the chart
    var option = {
        title: {
            text: ''
        },
        tooltip: {},
        legend: {
            data: ['Percentiles']
        },
        xAxis: {
            //data: ['Asc.', 'Resp', 'Esta', 'Sociab', 'Cautela', 'Origina', 'Compre', 'Vital', 'Autoe'],
            data: factorsData,
        },
        yAxis: {},
        series: [
            {
                name: 'Percentil',
                type: 'bar',
                data: percentilesData
            }
        ]
    };

    // Display the chart using the configuration items and data just specified.
    myChart.setOption(option);
</script>

