@model Login

@{
    ViewData["Title"] = "Login";
}


<div class="h-50 mt-5">
    <form class="d-flex justify-content-center align-content-center" asp-action="Login" asp-controller="Login" method="POST" enctype="multipart/form-data">
        <div class="w-50 mb-3 row d-flex justify-content-center">
            <div class="col-8 ">
                <div class="col-12">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" id="email"  class="form-control form-control-sm" placeholder="Correo" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="col-12 mt-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" id="pass" class="form-control form-control-sm" placeholder="Contraseña" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="col-12 mt-3">
                    <label asp-for="IsCandidate"><input asp-for="IsCandidate" type="checkbox" value="true" class=""/>  Marcar si es candidato</label>
                </div>
                <div class="col-12 my-2 text-center">
                    @if (ViewBag.Error != null)
                    {
                        <span class="text-danger fw-bold">@ViewBag.Error</span>
                    }
                </div>
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary col-4">Login</button>
                </div>
            </div>
        </div>
    </form>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

@section Scripts{
    <script>
        window.onload = function() {
          var url = new URL(window.location.href);

          var emailParam = url.searchParams.get("Email");
          var passParam = url.searchParams.get("Password");

          if (emailParam.length != 0 && passParam.length != 0){
              document.getElementById('email').value = emailParam;
              document.getElementById('pass').value = passParam;
          }

        };
    </script>
}

