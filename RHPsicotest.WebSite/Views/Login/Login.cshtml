@model Login

@{
    ViewData["Title"] = "Login";
}


<form asp-action="Login" asp-controller="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
    <div class="mb-3 row">
        <div class="col-5">
            <div class="col-sm-10">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control form-control-sm" placeholder="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="col-sm-10 mt-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control form-control-sm" placeholder="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="col-sm-10 mt-2">
                <label><input type="checkbox" name="isCandidate" id="isCandidate" value="true" /> Marcar si es candidato</label>
            </div>
            <div class="col-4 mt-2">
                <button type="submit" class="btn btn-primary mb-3">Login</button>
            </div>
        </div>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

