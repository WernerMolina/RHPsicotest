@model Permission

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-sm-10 col-md-8">
        <h1 class="fw-bold text-center">Eliminar Permiso</h1>
        <h3 class="text-center mt-2">Estas seguro de eliminar este Permiso?</h3>
        <div class="d-flex justify-content-center mt-4">
            <dl class="row col-12 fs-4">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.PermissionName)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.PermissionName)
                </dd>
                @*<dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Module)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.Module.ModuleName)
                </dd>*@
            </dl>
        </div>
        <div class="d-flex justify-content-end mt-5">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdPermission" />
                <a class="btn btn-dark">Volver a la Lista</a>
                <span class="fs-4 fw-bold">|</span>
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            </form>
        </div>
    </div>
</div>
