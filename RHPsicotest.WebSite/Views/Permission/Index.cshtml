@model IEnumerable<Permission>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PermissionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module.ModuleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPermission" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPermission" class="btn btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPermission" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
