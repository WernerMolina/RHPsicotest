@model IEnumerable<Permission>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="fw-bold mb-4">Lista de Permisos</h1>

<table class="table table-striped align-middle" id="dataTable">
    <thead class="table-dark">
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.PermissionName)
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PermissionName)
                </td>
            </tr>
        }
    </tbody>
</table>
