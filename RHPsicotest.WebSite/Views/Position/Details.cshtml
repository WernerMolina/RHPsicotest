@model Position

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-sm-10 col-md-8">
        <h1 class="fw-bold text-center">Detalles del Usuario</h1>
        <div class="d-flex justify-content-center mt-5">
            <dl class="row col-12 fs-4">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.PositionName)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.PositionName)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.PositionHigher)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.PositionHigher)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Department)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.Department)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.CreationDate)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.CreationDate)
                </dd>
            </dl>
        </div>
        <div class="d-flex justify-content-end mt-5">
            <a asp-action="Index" class="btn btn-dark">Volver a la Lista</a>
            <span class="fs-4 fw-bold">|</span>
            <a asp-action="Edit" asp-route-id="@Model.IdPosition" class="btn btn-warning">Editar</a>
        </div>
    </div>
</div>
