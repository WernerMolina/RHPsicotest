@model PositionUpdateVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    MultiSelectList tests = (MultiSelectList)ViewBag.Tests;
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-sm-10 col-md-8 col-xl-5">
        <h1 class="text-center fw-bold">Editar Puesto</h1>

        <form asp-action="Edit" class="p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPosition" />
            <div class="form-group my-2">
                <label class="control-label fw-bold fs-5">Seleccionar Pruebas</label>
                <div>
                    @Html.DropDownList("testsId", tests, new { Class = "form-select", Id = "multiple-select-clear-field", Multiple = "multiple" })
                </div>
            </div>
            <div class="form-group my-3">
                <label asp-for="PositionName" class="control-label fw-bold fs-5"></label>
                <input asp-for="PositionName" class="form-control" />
                <span asp-validation-for="PositionName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="PositionHigher" class="control-label fw-bold fs-5"></label>
                <input asp-for="PositionHigher" class="form-control" />
                <span asp-validation-for="PositionHigher" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Department" class="control-label fw-bold fs-5"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3">
                <input type="submit" value="Aceptar" class="btn btn-primary col-5" />
            </div>
        </form>
    </div>
</div>

<div class="text-end">
    <a asp-action="Index" class="btn btn-dark me-5">Volver a la Lista</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_SelectsJQueryPartial");
    }
}
