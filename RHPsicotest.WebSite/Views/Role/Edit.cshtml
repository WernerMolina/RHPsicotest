@model RHPsicotest.WebSite.Models.Role

@{
    ViewData["Title"] = "Editar Rol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Role">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRole" />
            <div class="form-group">
                <label asp-for="IdPermission" class="control-label"></label>
                <select asp-for="IdPermission" class="form-control" asp-items="@(new SelectList(ViewBag.Permissions, "IdPermission", "PermissionName"))"></select>
                <span asp-validation-for="IdPermission" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
