<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <link href="~/img/favicon.png" rel="icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RHPsicotest - @ViewData["Title"]</title>

    <!-- Bootstrap CSS-->
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container ">
                <div class="d-flex align-items-center justify-content-between">
                    <a class="logo d-flex align-items-center">
                        <img src="~/img/LogoConsulight.png" alt="" height="60px">
                    </a>
                </div>
                <div class="">
                    <ul class="navbar-nav flex-grow-1 text-end">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item mx-2">
                                <h5 class="my-2">@User.Identity.Name</h5>
                            </li>
                            <li class="nav-item d-block mx-2">
                                <a class="btn btn-danger font-weight-bold" asp-controller="Login" asp-action="Logout">Salir</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>

    <!-- Bootstrap JQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Files Main JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
