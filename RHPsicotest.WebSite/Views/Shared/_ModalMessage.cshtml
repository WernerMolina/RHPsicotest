@model String

<style>
    .fondo {
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, .5);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }
</style>

<div class="fondo d-flex justify-content-center align-items-center" id="modalMessage" onclick="closeModal()">
    <div class="card w-50">
        <div class="card-header text-center">
            <i class="bi bi-exclamation-square-fill fs-1 text-warning"></i>
        </div>
        <div class="card-body text-center">
            <h2 class="card-title">Ocurrio un problema !!!</h2>
            <p class="card-text h5 mb-3">@Model</p>
            <button class="btn btn-primary" onclick="closeModal()">Aceptar</button>
        </div>
    </div>
</div>

<script>
    function closeModal(event) {
        let modal = document.querySelector("#modalMessage");

        modal.classList.remove("d-flex");
        modal.classList.add("d-none");
    }
</script>