@model Stall

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-sm-10 col-md-8 col-xl-5">
        <h1 class="text-center fw-bold">Crear Puesto</h1>

        <form asp-action="Create" class="p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group my-3">
                <label asp-for="StallName" class="control-label fw-bold fs-5"></label>
                <input asp-for="StallName" class="form-control" />
                <span asp-validation-for="StallName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="StallHigher" class="control-label fw-bold fs-5"></label>
                <input asp-for="StallHigher" class="form-control" />
                <span asp-validation-for="StallHigher" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Department" class="control-label fw-bold fs-5"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Aceptar" class="btn btn-primary col-5" />
            </div>
        </form>
    </div>
</div>

<div class="text-end">
    <a asp-action="Index" class="btn btn-dark me-5">Volver a la Lista</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
