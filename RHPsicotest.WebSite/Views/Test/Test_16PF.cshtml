                        <div class=" d-flex align-items-start gap-2">
                            <div class="card">
                                <div class="card-body">
                                    <input class="" type="radio" name="responsesB[@j]" value="C"
                                       style="width:25px; height: 25px" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            j++;
        }

        <div class="text-end my-3">
            <input type="submit" class="btn btn-primary" value="Terminar" />
        </div>
    </div>
</form>

@section Scripts{
    <script>

        function startTest(){
            let exampleTest = document.querySelector("#exampleTest");
            let test16PFWayA = document.querySelector("#test16PFWayA");

            exampleTest.classList.add("d-none");
            test16PFWayA.classList.remove("d-none");    

            window.scroll(0, 0);
        }

        function continueTest() {
            let test16PFWayA = document.querySelector("#test16PFWayA");
            let test16PFWayB = document.querySelector("#test16PFWayB");

            test16PFWayA.classList.add("d-none");
            test16PFWayB.classList.remove("d-none");

            window.scroll(0, 0);
        }

    </script>
}
