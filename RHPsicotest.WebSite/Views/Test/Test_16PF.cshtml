<form asp-action="Test_16PF" method="post">
    <div class="d-none" id="test16PFWayA">
        <h2>Prueba 16PF Forma A</h2>
        @foreach (Questions_16PF question in (List<Questions_16PF>)ViewBag.Questions_WayA)
        {
            <div class="card my-3">
                <h4 class="card-header">Pregunta @question.QuestionNumber. @question.Question</h4>
                <div class="card-body d-flex gap-5 pt-3">
                    <div class="w-75 d-flex flex-column gap-3 fs-5">
                        <div class="card">
                            <div class="card-body">
                                A) @question.OptionA
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                B) @question.OptionB
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                C) @question.OptionC
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column gap-2">
                        <div class=" d-flex align-items-start gap-2">
                            <div class="card">
                                <div class="card-body">
                                    <input class="" type="radio" name="responsesA[@i]" value="A"
                                       style="width:25px; height: 25px" />
                                </div>
                            </div>
                        </div>
                        <div class=" d-flex align-items-start gap-2">
                            <div class="card">
                                <div class="card-body">
                                    <input class="" type="radio" name="responsesA[@i]" value="B"
                                       style="width:25px; height: 25px" />
                                </div>
                            </div>
                        </div>
                        <div class=" d-flex align-items-start gap-2">
                            <div class="card">
                                <div class="card-body">
                                    <input class="" type="radio" name="responsesA[@i]" value="C"
                                       style="width:25px; height: 25px" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            i++;
        }

        <div class="text-end my-3">
            <button type="button" class="btn btn-primary" onclick="continueTest()">Continuar</button>
        </div>
    </div>
    <div class="d-none" id="test16PFWayB">
        <h2>Prueba 16PF Forma B</h2>
        @foreach (Questions_16PF question in (List<Questions_16PF>)ViewBag.Questions_WayB)
        {
            <div class="card my-3">
                <h4 class="card-header">Pregunta @question.QuestionNumber. @question.Question</h4>
                <div class="card-body d-flex gap-5 pt-3">
                    <div class="w-75 d-flex flex-column gap-3 fs-5">
                        <div class="card">
                            <div class="card-body">
                                A) @question.OptionA
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                B) @question.OptionB
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                C) @question.OptionC
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-column gap-2">
                        <div class=" d-flex align-items-start gap-2">
                            <div class="card">
                                <div class="card-body">
                                    <input class="" type="radio" name="responsesB[@j]" value="A"
                                       style="width:25px; height: 25px" />
