@model IEnumerable<OTIS>

@{
    ViewData["Title"] = "Prueba OTIS";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;

    var factores = (string[])ViewBag.Factores;
    var puntajes = (byte[])ViewBag.Puntajes;
    var percentiles = (byte[])ViewBag.Percentiles;
}

@if (ViewBag.Factores != null)
{
    <table class="table table-striped table-borderless align-middle my-3">
        <thead class="table-dark">
            <tr class="text-center">
                <th class="fs-bold">
                    Factor
                </th>
                <th class="fs-bold">
                    Puntaje
                </th>
                <th class="fs-bold">
                    Percentil
                </th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int j = 0; j <= 8; j++)
            {
                <tr>
                    <td>
                        @factores[j]
                    </td>
                    <td>
                        @puntajes[j]
                    </td>
                    <td>
                        @percentiles[j]
                    </td>
                </tr>
            }

        </tbody>
    </table>

}


<h2>Prueba: OTIS</h2>
<form asp-action="Test_OTIS" method="post">
    @foreach (OTIS test in Model)
    {
        <div class="card col-8 my-2">
            <div class="card-header h5">
                @test.QuestionNumber. @test.Question
            </div>
            <div class="card-body d-flex gap-5">
                <div class="w-75 d-flex flex-column gap-3">
                    <div class="card">
                        <div class="card-body">
                            A) @test.OptionA
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            B) @test.OptionB
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            C) @test.OptionC
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            D) @test.OptionD
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            E) @test.OptionE
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column gap-2">
                    <div class=" d-flex align-items-start gap-2" id="optionA-@test.QuestionNumber">
                        <div class="card">
                            <div class="card-body">
                                <input class="" type="radio" id="" name="responses[@i]" value="A"
                                   style="width:25px; height: 25px" />
                            </div>
                        </div>
                    </div>
                    <div class=" d-flex align-items-start gap-2" id="optionB-@test.QuestionNumber">
                        <div class="card">
                            <div class="card-body">
                                <input class="" type="radio" id="" name="responses[@i]" value="B"
                                   style="width:25px; height: 25px" checked />
                            </div>
                        </div>
                    </div>
                    <div class=" d-flex align-items-start gap-2" id="optionC-@test.QuestionNumber">
                        <div class="card">
                            <div class="card-body">
                                <input class="" type="radio" id="" name="responses[@i]" value="C"
                                   style="width:25px; height: 25px" />
                            </div>
                        </div>
                    </div>
                    <div class=" d-flex align-items-start gap-2" id="optionD-@test.QuestionNumber">
                        <div class="card">
                            <div class="card-body">
                                <input class="" type="radio" id="" name="responses[@i]" value="D"
                                   style="width:25px; height: 25px" />
                            </div>
                        </div>
                    </div>
                    <div class=" d-flex align-items-start gap-2" id="optionE-@test.QuestionNumber">
                        <div class="card">
                            <div class="card-body">
                                <input class="" type="radio" id="" name="responses[@i]" value="E"
                                   style="width:25px; height: 25px" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        i++;
    }

    <div class="text-end my-3">
        <input type="submit" class="btn btn-primary" value="Terminar" />
    </div>
</form>


