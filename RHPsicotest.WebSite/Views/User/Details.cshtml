@model UserDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-sm-10 col-md-8">
        <h1 class="fw-bold text-center">Detalles del Usuario</h1>
        <div class="d-flex justify-content-center mt-5">
            <dl class="row col-12 fs-4">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </dt>
                <dd class="col-sm-6 text-center">
                    @Html.DisplayFor(model => model.RegistrationDate)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Roles)
                </dt>
                <dd class="col-sm-6 text-center">
                    @foreach (var role in Model.Roles)
                    {
                        <span>@role.RoleName</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="d-flex justify-content-end mt-5">
            <a asp-action="Index" class="btn btn-dark">Volver a la Lista</a>
            <span class="fs-4 fw-bold">|</span>
            <a asp-action="Edit" asp-route-id="@Model.IdUser" class="btn btn-warning">Editar</a>
        </div>
    </div>
</div>
